{
  "name": "credion-website",
  "version": "1.0.0",
  "description": "Credion Website with Dashboard and Payment Integration",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/app.js",
    "client": "npm run dev --prefix .",
    "build": "npm run build --prefix .",
    "install-deps": "npm install && cd backend && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-session": "^1.17.3",
    "stripe": "^14.0.0",
    "sequelize": "^6.35.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
