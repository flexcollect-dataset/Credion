{
  "name": "credion-website",
  "description": "Credion Credit Reporting Website with Live Database",
  "version": "1.0.0",
  "services": {
    "backend": {
      "type": "node",
      "build": {
        "command": "cd backend && npm install",
        "context": "backend"
      },
      "start": {
        "command": "cd backend && node app.js",
        "port": 3000
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    },
    "frontend": {
      "type": "vite",
      "build": {
        "command": "npm install && npm run build",
        "context": "."
      },
      "start": {
        "command": "npm run preview",
        "port": 5173
      },
      "environment": {
        "VITE_API_BASE_URL": "https://your-backend-url.bolt.new"
      }
    }
  },
  "database": {
    "type": "postgresql",
    "host": "flexdataset.cluster-cpoeqq6cwu00.ap-southeast-2.rds.amazonaws.com",
    "port": 5432,
    "database": "FlexDataseterMaster",
    "username": "rutvikkorat",
    "ssl": true
  }
}
